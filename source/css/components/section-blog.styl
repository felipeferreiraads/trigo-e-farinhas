.blog-home
    padding: 100px 0
    h2
        font-size: 35px
        color: $color.primary
        text-align: center
        margin-bottom: 80px
    .grid
        display flex
        > *:not(:last-child)
            margin-right: 70px
    .button
        margin: 100px auto 0
        max-width 200px
        padding: 0
.card-blog
    height 400px
    border-radius: 5px
    overflow hidden
    box-shadow: 0 2px 10px 0 rgba(162, 162, 162, 0.5)
    figure
        height: 180px
        img
            width: 100%
            height 100%
            object-fit: cover
            object-position: center
    .content
        padding: 30px
    h3
        font-size: 25px
        color: $color.primary
        text-align: center
        margin-bottom: 15px
    p
        text-align: center
        margin-bottom: 15px
    a
        text-align: center
        display block
        color: $color.primary
        font-weight: bold
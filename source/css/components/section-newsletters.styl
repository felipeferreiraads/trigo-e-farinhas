.newsletters
    position relative
    top -200px
    h2
        font-size: 30px
        color: white
        text-align: center
        margin-bottom: 80px
    .grid
        display flex
        > *:not(:last-child)
            margin-right: 70px

.card-newsletter
    height: 400px
    background: white
    border-radius: 5px
    box-shadow: 0 2px 10px 0 rgba(162, 162, 162, 0.5)
    position relative
    overflow hidden
    .content
        padding: 30px
        display: flex
        flex-direction: column
        align-items: center
    img
        width: 100px
    h3
        font-size: 25px
        color: $color.primary
        text-align: center
        margin: 20px 0
    p
        text-align: center
    a
        width: 100%
        height 50px
        display block
        position absolute
        bottom: 0
        left 0
        background: $color.primary
        line-height: 50px
        color white
        font-weight: bold
        text-align: center
        text-transform: uppercase